<% provide(:title, 'New yardsale') %>
<h1>Create a New Yardsale</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@yardsale) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :date %>
      <%= f.text_field :date, placeholder: "MM/DD/YYYY" %>

      <%= f.label :begin_time, "Begin Time" %>
      <%= f.text_field :begin_time %>

      <%= f.label :end_time, "End Time" %>
      <%= f.text_field :end_time %>
      
      <%= form_for @yardsale.address do |a| %>
        <%= a.label :address %>
        <%= a.text_field :address %>
      <% end %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>