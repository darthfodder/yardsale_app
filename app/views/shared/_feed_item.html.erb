<li id="<%= feed_item.id %>">
  <span class="description">Title: <%= feed_item.title %></span>
  <span class="description">Date: <%= feed_item.date %></span>
  <span class="description">From: <%= feed_item.begin_time %> Till: <%= feed_item.end_time %></span>
  <span class="description">Description: <%= feed_item.description %></span>
  <span class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "edit", feed_item, method: :get, title: feed_item.description %>
    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.description %>
  <% end %>
</li>
