<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.yardsales.any? %>
      <h3>Yardsales (<%= @user.yardsales.count %>)</h3>
      <ol class="yardsales">
        <%= render @yardsales %>
      </ol>
      <%= will_paginate @yardsales %>
    <% end %>
  </div>
</div>